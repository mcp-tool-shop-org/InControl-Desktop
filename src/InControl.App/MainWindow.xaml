<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="InControl.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InControl.App"
    xmlns:controls="using:InControl.App.Controls"
    Title="InControl">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top App Bar -->
        <controls:AppBar Grid.Row="0" />

        <!-- Three-Pane Layout -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- Left Sidebar (Session List) -->
                <ColumnDefinition Width="{StaticResource SidebarWidth}" MinWidth="200" MaxWidth="400" />
                <!-- Main Content (Conversation) -->
                <ColumnDefinition Width="*" MinWidth="400" />
                <!-- Right Inspector (collapsible) -->
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <controls:SessionSidebar Grid.Column="0" />

            <!-- Main Content Area -->
            <Grid Grid.Column="1"
                  Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
                <controls:ConversationView />
            </Grid>

            <!-- Right Inspector Panel (shell) -->
            <controls:InspectorPanel Grid.Column="2"
                                     x:Name="InspectorPanel"
                                     Width="320"
                                     Visibility="Collapsed" />
        </Grid>
    </Grid>
</Window>
