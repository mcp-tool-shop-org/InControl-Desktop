<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="InControl.App.Controls.StatusIndicator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    StatusIndicator: Unified visual for Loading / Success / Error / Warning states.
    Use for any operation feedback: API calls, saves, downloads, validations, etc.
    -->
    <Grid x:Name="RootGrid" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- State Visual Container -->
        <Grid Grid.Column="0" Width="20" Height="20" VerticalAlignment="Center">
            <!-- Loading State: ProgressRing -->
            <ProgressRing x:Name="LoadingRing"
                          IsActive="False"
                          Width="16"
                          Height="16"
                          Visibility="Collapsed" />

            <!-- Static Icon: Success/Error/Warning/Info -->
            <FontIcon x:Name="StateIcon"
                      FontSize="16"
                      Visibility="Collapsed"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center" />

            <!-- Success Checkmark Animation Container -->
            <Border x:Name="SuccessCheckContainer"
                    Width="20"
                    Height="20"
                    CornerRadius="10"
                    Background="{ThemeResource SystemFillColorSuccessBrush}"
                    Visibility="Collapsed"
                    Opacity="0">
                <FontIcon Glyph="&#xE73E;"
                          FontSize="12"
                          Foreground="White"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center" />
            </Border>
        </Grid>

        <!-- Message Text -->
        <TextBlock Grid.Column="1"
                   x:Name="MessageText"
                   Margin="8,0,0,0"
                   VerticalAlignment="Center"
                   TextTrimming="CharacterEllipsis" />
    </Grid>
</UserControl>
