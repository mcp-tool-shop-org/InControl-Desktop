<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="InControl.App.Controls.LoadingOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    LoadingOverlay: Full-area loading overlay for page/section loading states.
    Shows centered loading indicator with optional message.
    -->
    <Grid x:Name="OverlayGrid"
          Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}"
          Visibility="Collapsed">

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="16">

            <!-- Loading Ring -->
            <ProgressRing x:Name="LoadingRing"
                          IsActive="True"
                          Width="32"
                          Height="32"
                          HorizontalAlignment="Center" />

            <!-- Loading Message -->
            <TextBlock x:Name="LoadingMessage"
                       Text="Loading..."
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Center" />

            <!-- Secondary Message -->
            <TextBlock x:Name="SecondaryMessage"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                       HorizontalAlignment="Center"
                       Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</UserControl>
