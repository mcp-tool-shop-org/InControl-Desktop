<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="InControl.App.Controls.WelcomePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InControl.App.Controls">

    <ScrollViewer Padding="48" MaxWidth="700" HorizontalAlignment="Center">
        <StackPanel Spacing="32" VerticalAlignment="Center">
            <!-- Greeting -->
            <StackPanel Spacing="8">
                <TextBlock x:Name="GreetingText"
                           Text="Good morning"
                           Style="{StaticResource TitleTextBlockStyle}" />

                <TextBlock x:Name="SubtitleText"
                           Text="Pick up where you left off, or start something new."
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           TextWrapping="Wrap" />
            </StackPanel>

            <!-- Quick Start Guide (shown for new users or when no model is loaded) -->
            <Border x:Name="QuickStartPanel"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="12"
                    Padding="24">
                <StackPanel Spacing="20">
                    <TextBlock Text="Quick Start"
                               Style="{StaticResource SubtitleTextBlockStyle}" />

                    <!-- Step 1: Choose a Model -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                x:Name="Step1Circle"
                                Width="36" Height="36"
                                CornerRadius="18"
                                Margin="0,0,16,0"
                                VerticalAlignment="Top"
                                Background="{ThemeResource AccentFillColorDefaultBrush}">
                            <Grid>
                                <TextBlock x:Name="Step1Number"
                                           Text="1"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                                <FontIcon x:Name="Step1Check"
                                          Glyph="&#xE73E;"
                                          FontSize="16"
                                          Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Visibility="Collapsed" />
                            </Grid>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Choose a model"
                                       Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TextBlock x:Name="Step1Description"
                                       Text="Select or download an AI model to power your conversations."
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <Button Grid.Column="2"
                                x:Name="OpenModelManagerButton"
                                VerticalAlignment="Center"
                                Click="OpenModelManagerButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE950;" FontSize="14" />
                                <TextBlock Text="Model Manager" />
                            </StackPanel>
                        </Button>
                    </Grid>

                    <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                    <!-- Step 2: Create a Session -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                x:Name="Step2Circle"
                                Width="36" Height="36"
                                CornerRadius="18"
                                Margin="0,0,16,0"
                                VerticalAlignment="Top"
                                Background="{ThemeResource ControlFillColorDisabledBrush}">
                            <Grid>
                                <TextBlock x:Name="Step2Number"
                                           Text="2"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                                <FontIcon x:Name="Step2Check"
                                          Glyph="&#xE73E;"
                                          FontSize="16"
                                          Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Visibility="Collapsed" />
                            </Grid>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Create a session"
                                       Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TextBlock Text="Sessions organize your conversations. Start one with Ctrl+N."
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <Button Grid.Column="2"
                                x:Name="QuickStartNewSessionButton"
                                VerticalAlignment="Center"
                                Click="NewSessionButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE710;" FontSize="14" />
                                <TextBlock Text="New Session" />
                            </StackPanel>
                        </Button>
                    </Grid>

                    <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                    <!-- Step 3: Try a Prompt -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                x:Name="Step3Circle"
                                Width="36" Height="36"
                                CornerRadius="18"
                                Margin="0,0,16,0"
                                VerticalAlignment="Top"
                                Background="{ThemeResource ControlFillColorDisabledBrush}">
                            <TextBlock Text="3"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Try a prompt"
                                       Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TextBlock Text="Type a message and press Ctrl+Enter to run it locally."
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <Button Grid.Column="2"
                                x:Name="InsertExampleButton"
                                VerticalAlignment="Center"
                                Click="InsertExampleButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8C8;" FontSize="14" />
                                <TextBlock Text="Try Example" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Quick Actions (for returning users) -->
            <StackPanel Spacing="12">
                <!-- Continue Session (shown if recent session exists) -->
                <Button x:Name="ContinueButton"
                        HorizontalAlignment="Stretch"
                        Padding="16"
                        Click="ContinueButton_Click"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon Grid.Column="0"
                                  Glyph="&#xE768;"
                                  FontSize="20"
                                  Margin="0,0,12,0" />

                        <StackPanel Grid.Column="1">
                            <TextBlock x:Name="ContinueSessionTitle"
                                       Text="Continue session"
                                       Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TextBlock x:Name="ContinueSessionTime"
                                       Text="Started 5m ago"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>

                        <FontIcon Grid.Column="2"
                                  Glyph="&#xE76C;"
                                  FontSize="12"
                                  Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                    </Grid>
                </Button>

                <!-- New Session -->
                <Button x:Name="NewSessionButton"
                        HorizontalAlignment="Stretch"
                        Padding="16"
                        Click="NewSessionButton_Click">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <FontIcon Grid.Column="0"
                                  Glyph="&#xE710;"
                                  FontSize="20"
                                  Margin="0,0,12,0" />

                        <TextBlock Grid.Column="1"
                                   Text="Start a new session"
                                   Style="{StaticResource BodyStrongTextBlockStyle}" />
                    </Grid>
                </Button>

                <!-- Browse Sessions (shown if user has sessions) -->
                <Button x:Name="BrowseButton"
                        HorizontalAlignment="Stretch"
                        Padding="16"
                        Click="BrowseButton_Click"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon Grid.Column="0"
                                  Glyph="&#xE8B7;"
                                  FontSize="20"
                                  Margin="0,0,12,0" />

                        <TextBlock Grid.Column="1"
                                   Text="Browse sessions"
                                   Style="{StaticResource BodyStrongTextBlockStyle}" />

                        <TextBlock x:Name="SessionCountText"
                                   Grid.Column="2"
                                   Text="12 sessions"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   VerticalAlignment="Center" />
                    </Grid>
                </Button>
            </StackPanel>

            <!-- Status Footer -->
            <StackPanel Spacing="8">
                <StackPanel x:Name="ModelStatusPanel"
                            Orientation="Horizontal"
                            Spacing="8"
                            Visibility="Collapsed">
                    <FontIcon Glyph="&#xE73E;"
                              FontSize="12"
                              Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                    <TextBlock x:Name="ModelStatusText"
                               Text="llama3.2 ready"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <!-- No Model Warning -->
                <StackPanel x:Name="NoModelWarning"
                            Orientation="Horizontal"
                            Spacing="8">
                    <FontIcon Glyph="&#xE7BA;"
                              FontSize="12"
                              Foreground="{ThemeResource SystemFillColorCautionBrush}" />
                    <TextBlock Text="No model selected. Open Model Manager to get started."
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <TextBlock Text="Everything runs locally on your machine."
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
