<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="InControl.App.Pages.ModelManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InControl.App.Controls">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Padding="{StaticResource PageHeaderPadding}" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton"
                    Grid.Column="0"
                    Style="{StaticResource PageBackButtonStyle}"
                    VerticalAlignment="Center">
                <FontIcon Glyph="&#xE72B;" FontSize="{StaticResource IconSizeMD}" />
            </Button>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="Model Manager"
                           Style="{StaticResource PageTitleStyle}" />
                <TextBlock Text="Install, configure, and manage AI models"
                           Style="{StaticResource PageSubtitleStyle}" />
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                <Button x:Name="RefreshOllamaButton"
                        AutomationProperties.Name="Refresh Ollama models"
                        AccessKey="R">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE72C;" FontSize="14" />
                        <TextBlock Text="Refresh" />
                    </StackPanel>
                </Button>
                <Button x:Name="PullModelButton"
                        AutomationProperties.Name="Pull model from Ollama library"
                        AccessKey="P"
                        Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE896;" FontSize="14" />
                        <TextBlock Text="Pull Model" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Content Area -->
        <Grid Grid.Row="1" Padding="{StaticResource PageContentPadding}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="320" />
            </Grid.ColumnDefinitions>

            <!-- Models List -->
            <Grid Grid.Column="0" Margin="0,0,16,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Section Header -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Ollama Icon -->
                    <Border Grid.Column="0"
                            Width="24" Height="24"
                            CornerRadius="4"
                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                            Margin="0,0,8,0"
                            VerticalAlignment="Center">
                        <TextBlock Text="ðŸ¦™" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>

                    <TextBlock Grid.Column="1"
                               Text="Ollama Models"
                               Style="{StaticResource SectionHeaderStyle}"
                               VerticalAlignment="Center" />
                    <TextBlock x:Name="ModelCountText"
                               Grid.Column="2"
                               Text="0 models"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               VerticalAlignment="Center" />
                </Grid>

                <!-- Models List or Empty State -->
                <Grid Grid.Row="1">
                    <!-- Empty State - Ollama not connected or no models -->
                    <Border x:Name="EmptyState"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8"
                            Padding="48">
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Spacing="16">
                            <TextBlock Text="ðŸ¦™" FontSize="48" HorizontalAlignment="Center" />
                            <TextBlock x:Name="EmptyStateTitle"
                                       Text="No Ollama models found"
                                       Style="{StaticResource SubtitleTextBlockStyle}"
                                       HorizontalAlignment="Center" />
                            <TextBlock x:Name="EmptyStateDescription"
                                       Text="Pull a model from the Ollama library to get started."
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       MaxWidth="350" />
                            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" Margin="0,8,0,0">
                                <Button x:Name="EmptyPullButton"
                                        Style="{ThemeResource AccentButtonStyle}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE896;" FontSize="14" />
                                        <TextBlock Text="Pull Model" />
                                    </StackPanel>
                                </Button>
                                <Button x:Name="EmptyRefreshButton">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE72C;" FontSize="14" />
                                        <TextBlock Text="Refresh" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Models ListView -->
                    <ListView x:Name="ModelsListView"
                              Visibility="Collapsed"
                              SelectionMode="Single"
                              AutomationProperties.Name="Installed models list">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12" Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Model Icon -->
                                    <Border Grid.Column="0"
                                            Width="40" Height="40"
                                            CornerRadius="8"
                                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                                            Margin="0,0,12,0">
                                        <FontIcon Glyph="&#xE8F1;"
                                                  FontSize="18"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                                    </Border>

                                    <!-- Model Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   Style="{StaticResource BodyStrongTextBlockStyle}" />
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="{Binding Size}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                            <TextBlock Text="â€¢"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                            <TextBlock Text="{Binding Parameters}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Status -->
                                    <Border Grid.Column="2"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                            VerticalAlignment="Center"
                                            Margin="8,0">
                                        <TextBlock Text="{Binding Status}"
                                                   Style="{StaticResource CaptionTextBlockStyle}" />
                                    </Border>

                                    <!-- Actions -->
                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="4">
                                        <Button Padding="8" Background="Transparent" BorderThickness="0"
                                                ToolTipService.ToolTip="Test run">
                                            <FontIcon Glyph="&#xE768;" FontSize="14" />
                                        </Button>
                                        <Button Padding="8" Background="Transparent" BorderThickness="0"
                                                ToolTipService.ToolTip="Open folder">
                                            <FontIcon Glyph="&#xE838;" FontSize="14" />
                                        </Button>
                                        <Button Padding="8" Background="Transparent" BorderThickness="0"
                                                ToolTipService.ToolTip="Remove">
                                            <FontIcon Glyph="&#xE74D;" FontSize="14" />
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>

            <!-- Info Panel (Right Side) -->
            <Border Grid.Column="1"
                    Style="{StaticResource CardBorderStyle}"
                    Padding="20">
                <ScrollViewer>
                    <StackPanel Spacing="20">

                        <!-- Default Model Section -->
                        <StackPanel Spacing="{StaticResource InlineSpacing}">
                            <TextBlock Text="Default Model"
                                       Style="{StaticResource SectionHeaderStyle}" />
                            <TextBlock Text="Select a model to use for new sessions"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap" />
                            <ComboBox x:Name="DefaultModelSelector"
                                      PlaceholderText="No models available"
                                      HorizontalAlignment="Stretch"
                                      AutomationProperties.Name="Select default model" />
                        </StackPanel>

                        <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                        <!-- Ollama Connection -->
                        <StackPanel Spacing="{StaticResource InlineSpacing}">
                            <TextBlock Text="Ollama Connection"
                                       Style="{StaticResource SectionHeaderStyle}" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,16,4" />
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="6">
                                    <Ellipse x:Name="OllamaStatusIndicator"
                                             Width="8" Height="8"
                                             Fill="{ThemeResource SystemFillColorSuccessBrush}"
                                             VerticalAlignment="Center" />
                                    <TextBlock x:Name="OllamaStatusText"
                                               Text="Connected"
                                               Style="{StaticResource CaptionTextBlockStyle}" />
                                </StackPanel>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Endpoint:"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,16,4" />
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="OllamaEndpointText"
                                           Text="http://localhost:11434"
                                           Style="{StaticResource CaptionTextBlockStyle}" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Version:"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,16,4" />
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="OllamaVersionText"
                                           Text="--"
                                           Style="{StaticResource CaptionTextBlockStyle}" />
                            </Grid>
                        </StackPanel>

                        <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                        <!-- Popular Models -->
                        <StackPanel Spacing="{StaticResource InlineSpacing}">
                            <TextBlock Text="Popular Models"
                                       Style="{StaticResource SectionHeaderStyle}" />

                            <TextBlock Text="Quick pull from Ollama library:"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

                            <Button x:Name="PullLlama32Button"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="llama3.2" Style="{StaticResource BodyStrongTextBlockStyle}" />
                                        <TextBlock Text="3B â€¢ Latest Llama model" Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="~2 GB" Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                               VerticalAlignment="Center" />
                                </Grid>
                            </Button>

                            <Button x:Name="PullMistralButton"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="mistral" Style="{StaticResource BodyStrongTextBlockStyle}" />
                                        <TextBlock Text="7B â€¢ Fast and capable" Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="~4 GB" Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                               VerticalAlignment="Center" />
                                </Grid>
                            </Button>

                            <Button x:Name="PullCodegemmaButton"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="codegemma" Style="{StaticResource BodyStrongTextBlockStyle}" />
                                        <TextBlock Text="7B â€¢ Optimized for code" Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="~5 GB" Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                               VerticalAlignment="Center" />
                                </Grid>
                            </Button>
                        </StackPanel>

                        <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                        <!-- Quick Actions -->
                        <StackPanel Spacing="{StaticResource InlineSpacing}">
                            <TextBlock Text="Quick Actions"
                                       Style="{StaticResource SectionHeaderStyle}" />

                            <Button x:Name="OpenOllamaDocsButton"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    AutomationProperties.Name="Open Ollama documentation">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8A7;" FontSize="14" />
                                    <TextBlock Text="Ollama documentation" />
                                </StackPanel>
                            </Button>

                            <Button x:Name="OpenOllamaLibraryButton"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    AutomationProperties.Name="Browse Ollama model library">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8B7;" FontSize="14" />
                                    <TextBlock Text="Browse model library" />
                                </StackPanel>
                            </Button>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <local:LoadingOverlay x:Name="LoadingOverlay"
                               Grid.Row="1"
                               Message="Loading models..." />

        <!-- Operation Feedback -->
        <local:OperationFeedback x:Name="OperationFeedback"
                                  Grid.Row="1"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Bottom"
                                  Margin="0,0,0,24" />
    </Grid>
</UserControl>
