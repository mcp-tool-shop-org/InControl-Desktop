<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="InControl.App.Pages.ModelManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Padding="24,16" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton"
                    Grid.Column="0"
                    Padding="8"
                    Background="Transparent"
                    BorderThickness="0"
                    ToolTipService.ToolTip="Back"
                    VerticalAlignment="Center"
                    Margin="0,0,12,0">
                <FontIcon Glyph="&#xE72B;" FontSize="16" />
            </Button>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="Model Manager"
                           Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Install, configure, and manage AI models"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                <Button x:Name="ImportButton">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8B5;" FontSize="14" />
                        <TextBlock Text="Import Model" />
                    </StackPanel>
                </Button>
                <Button x:Name="DownloadButton">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE896;" FontSize="14" />
                        <TextBlock Text="Download" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Content Area -->
        <Grid Grid.Row="1" Padding="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="320" />
            </Grid.ColumnDefinitions>

            <!-- Models List -->
            <Grid Grid.Column="0" Margin="0,0,16,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Section Header -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Installed Models"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               VerticalAlignment="Center" />
                    <TextBlock x:Name="ModelCountText"
                               Grid.Column="1"
                               Text="0 models"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               VerticalAlignment="Center" />
                </Grid>

                <!-- Models List or Empty State -->
                <Grid Grid.Row="1">
                    <!-- Empty State -->
                    <Border x:Name="EmptyState"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8"
                            Padding="48">
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Spacing="16">
                            <FontIcon Glyph="&#xE950;"
                                      FontSize="48"
                                      Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                            <TextBlock Text="No models installed"
                                       Style="{StaticResource SubtitleTextBlockStyle}"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Import a model file or download from Hugging Face to get started."
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       MaxWidth="300" />
                            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" Margin="0,8,0,0">
                                <Button x:Name="EmptyImportButton">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE8B5;" FontSize="14" />
                                        <TextBlock Text="Import Model" />
                                    </StackPanel>
                                </Button>
                                <Button x:Name="EmptyDownloadButton">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE896;" FontSize="14" />
                                        <TextBlock Text="Download Model" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Models ListView -->
                    <ListView x:Name="ModelsListView"
                              Visibility="Collapsed"
                              SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12" Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Model Icon -->
                                    <Border Grid.Column="0"
                                            Width="40" Height="40"
                                            CornerRadius="8"
                                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                                            Margin="0,0,12,0">
                                        <FontIcon Glyph="&#xE8F1;"
                                                  FontSize="18"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                                    </Border>

                                    <!-- Model Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   Style="{StaticResource BodyStrongTextBlockStyle}" />
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="{Binding Size}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                            <TextBlock Text="â€¢"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                            <TextBlock Text="{Binding Parameters}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Status -->
                                    <Border Grid.Column="2"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                            VerticalAlignment="Center"
                                            Margin="8,0">
                                        <TextBlock Text="{Binding Status}"
                                                   Style="{StaticResource CaptionTextBlockStyle}" />
                                    </Border>

                                    <!-- Actions -->
                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="4">
                                        <Button Padding="8" Background="Transparent" BorderThickness="0"
                                                ToolTipService.ToolTip="Test run">
                                            <FontIcon Glyph="&#xE768;" FontSize="14" />
                                        </Button>
                                        <Button Padding="8" Background="Transparent" BorderThickness="0"
                                                ToolTipService.ToolTip="Open folder">
                                            <FontIcon Glyph="&#xE838;" FontSize="14" />
                                        </Button>
                                        <Button Padding="8" Background="Transparent" BorderThickness="0"
                                                ToolTipService.ToolTip="Remove">
                                            <FontIcon Glyph="&#xE74D;" FontSize="14" />
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>

            <!-- Info Panel (Right Side) -->
            <Border Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="20">
                <ScrollViewer>
                    <StackPanel Spacing="20">

                        <!-- Default Model Section -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Default Model"
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock Text="Select a model to use for new sessions"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap" />
                            <ComboBox x:Name="DefaultModelSelector"
                                      PlaceholderText="No models available"
                                      HorizontalAlignment="Stretch" />
                        </StackPanel>

                        <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                        <!-- GPU Info Section -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="GPU Status"
                                       Style="{StaticResource SubtitleTextBlockStyle}" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Device:"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,16,4" />
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="GpuNameText"
                                           Text="Detecting..."
                                           Style="{StaticResource CaptionTextBlockStyle}" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="VRAM:"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,16,4" />
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="VramText"
                                           Text="--"
                                           Style="{StaticResource CaptionTextBlockStyle}" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="CUDA:"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,16,4" />
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="CudaText"
                                           Text="--"
                                           Style="{StaticResource CaptionTextBlockStyle}" />

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Status:"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,16,4" />
                                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Spacing="6">
                                    <Ellipse x:Name="GpuStatusIndicator"
                                             Width="8" Height="8"
                                             Fill="{ThemeResource SystemFillColorSuccessBrush}"
                                             VerticalAlignment="Center" />
                                    <TextBlock x:Name="GpuStatusText"
                                               Text="Ready"
                                               Style="{StaticResource CaptionTextBlockStyle}" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                        <!-- Compatibility Info -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Compatibility"
                                       Style="{StaticResource SubtitleTextBlockStyle}" />

                            <InfoBar x:Name="CompatibilityInfo"
                                     IsOpen="True"
                                     IsClosable="False"
                                     Severity="Informational"
                                     Title="Model Requirements"
                                     Message="Models are loaded into GPU memory. Larger models require more VRAM." />
                        </StackPanel>

                        <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                        <!-- VRAM Estimation -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="VRAM Estimation"
                                       Style="{StaticResource SubtitleTextBlockStyle}" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="7B (Q4)"
                                           Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="~4 GB"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="13B (Q4)"
                                           Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="~8 GB"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="34B (Q4)"
                                           Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="~20 GB"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="70B (Q4)"
                                           Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="~40 GB"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </Grid>
                        </StackPanel>

                        <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                        <!-- Quick Actions -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Quick Actions"
                                       Style="{StaticResource SubtitleTextBlockStyle}" />

                            <Button x:Name="OpenModelsFolderButton"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE838;" FontSize="14" />
                                    <TextBlock Text="Open models folder" />
                                </StackPanel>
                            </Button>

                            <Button x:Name="RefreshModelsButton"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72C;" FontSize="14" />
                                    <TextBlock Text="Refresh model list" />
                                </StackPanel>
                            </Button>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
