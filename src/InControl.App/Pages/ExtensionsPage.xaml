<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="InControl.App.Pages.ExtensionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Padding="24,16" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton"
                    Grid.Column="0"
                    Padding="8"
                    Background="Transparent"
                    BorderThickness="0"
                    ToolTipService.ToolTip="Back"
                    VerticalAlignment="Center"
                    Margin="0,0,12,0">
                <FontIcon Glyph="&#xE72B;" FontSize="16" />
            </Button>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="Extensions"
                           Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Extend InControl with plugins and integrations"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>

            <Button Grid.Column="2" x:Name="InstallButton">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE710;" FontSize="14" />
                    <TextBlock Text="Install Extension" />
                </StackPanel>
            </Button>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1" Padding="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="320" />
            </Grid.ColumnDefinitions>

            <!-- Extensions List -->
            <Grid Grid.Column="0" Margin="0,0,16,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Tabs -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="16" Margin="0,0,0,16">
                    <RadioButton x:Name="InstalledTab" Content="Installed" IsChecked="True" GroupName="ExtTabs" />
                    <RadioButton x:Name="AvailableTab" Content="Available" GroupName="ExtTabs" />
                </StackPanel>

                <!-- Section Header -->
                <Grid Grid.Row="1" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="SectionTitle"
                               Text="Installed Extensions"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               VerticalAlignment="Center" />
                    <TextBlock x:Name="ExtensionCountText"
                               Grid.Column="1"
                               Text="0 extensions"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               VerticalAlignment="Center" />
                </Grid>

                <!-- Extensions List or Empty State -->
                <Grid Grid.Row="2">
                    <!-- Empty State -->
                    <Border x:Name="EmptyState"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8"
                            Padding="48">
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Spacing="16">
                            <FontIcon Glyph="&#xEA86;"
                                      FontSize="48"
                                      Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                            <TextBlock Text="No extensions installed"
                                       Style="{StaticResource SubtitleTextBlockStyle}"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Extensions add new capabilities to InControl, like web search or code execution."
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       MaxWidth="300" />
                            <Button x:Name="EmptyInstallButton" Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE710;" FontSize="14" />
                                    <TextBlock Text="Browse Extensions" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Extensions ListView -->
                    <ListView x:Name="ExtensionsListView"
                              Visibility="Collapsed"
                              SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Extension Icon -->
                                        <Border Grid.Column="0"
                                                Width="48" Height="48"
                                                CornerRadius="8"
                                                Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                Margin="0,0,16,0">
                                            <FontIcon Glyph="{Binding Icon}"
                                                      FontSize="24"
                                                      Foreground="White"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                        </Border>

                                        <!-- Extension Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}"
                                                       Style="{StaticResource BodyStrongTextBlockStyle}" />
                                            <TextBlock Text="{Binding Description}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       TextTrimming="CharacterEllipsis" />
                                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding Version}"
                                                           Style="{StaticResource CaptionTextBlockStyle}"
                                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                                <TextBlock Text="â€¢"
                                                           Style="{StaticResource CaptionTextBlockStyle}"
                                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                                <TextBlock Text="{Binding Author}"
                                                           Style="{StaticResource CaptionTextBlockStyle}"
                                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Actions -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                            <ToggleSwitch IsOn="{Binding IsEnabled}" />
                                            <Button Padding="8" Background="Transparent" BorderThickness="0"
                                                    ToolTipService.ToolTip="More options">
                                                <FontIcon Glyph="&#xE712;" FontSize="14" />
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>

            <!-- Details Panel -->
            <Border Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="20">
                <ScrollViewer>
                    <StackPanel Spacing="20">

                        <!-- Selected Extension -->
                        <StackPanel x:Name="NoSelectionState" Spacing="12">
                            <FontIcon Glyph="&#xEA86;"
                                      FontSize="32"
                                      Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                      HorizontalAlignment="Center" />
                            <TextBlock Text="Select an extension"
                                       Style="{StaticResource SubtitleTextBlockStyle}"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Click on an extension to view its details and settings."
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center" />
                        </StackPanel>

                        <!-- Extension Details (shown when selected) -->
                        <StackPanel x:Name="ExtensionDetails" Visibility="Collapsed" Spacing="16">
                            <TextBlock x:Name="DetailName"
                                       Text="Extension Name"
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock x:Name="DetailDescription"
                                       Text="Extension description goes here."
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap" />

                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <!-- Permissions -->
                            <TextBlock Text="Permissions"
                                       Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <StackPanel x:Name="PermissionsList" Spacing="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE701;" FontSize="12" />
                                    <TextBlock Text="Network access"
                                               Style="{StaticResource CaptionTextBlockStyle}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8A5;" FontSize="12" />
                                    <TextBlock Text="File system read"
                                               Style="{StaticResource CaptionTextBlockStyle}" />
                                </StackPanel>
                            </StackPanel>

                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <!-- Actions -->
                            <Button x:Name="UninstallButton"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74D;" FontSize="14" />
                                    <TextBlock Text="Uninstall" />
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                        <!-- Activity Log -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Recent Activity"
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock Text="Extension activity will appear here."
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
