<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="InControl.App.Pages.PolicyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Padding="24,16" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton"
                    Grid.Column="0"
                    Padding="8"
                    Background="Transparent"
                    BorderThickness="0"
                    ToolTipService.ToolTip="Back"
                    VerticalAlignment="Center"
                    Margin="0,0,12,0">
                <FontIcon Glyph="&#xE72B;" FontSize="16" />
            </Button>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="Policy &amp; Governance"
                           Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Configure security policies and access controls"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                <FontIcon x:Name="PolicyLockIcon" Glyph="&#xE72E;" FontSize="16" />
                <TextBlock x:Name="PolicyStatusText"
                           Text="Active"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           VerticalAlignment="Center"
                           Margin="4,0,0,0" />
            </StackPanel>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="24">
            <StackPanel Spacing="24" MaxWidth="900">

                <!-- Active Policy Info -->
                <InfoBar x:Name="PolicyInfoBar"
                         IsOpen="True"
                         IsClosable="False"
                         Severity="Informational"
                         Title="Policy Active"
                         Message="Your security policies are protecting this installation. Some features may be restricted based on your organization's configuration." />

                <!-- Network Policy Section -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Network Policy"
                               Style="{StaticResource SubtitleTextBlockStyle}" />

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Spacing="16">

                            <!-- Offline Mode -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="&#xE8CD;" FontSize="20" Margin="0,0,12,0"
                                          VerticalAlignment="Center" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Offline mode" />
                                    <TextBlock Text="Block all network connections"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <ToggleSwitch Grid.Column="2" x:Name="OfflineModeToggle" IsOn="False" />
                            </Grid>

                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <!-- Allow List -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="&#xE8D7;" FontSize="20" Margin="0,0,12,0"
                                          VerticalAlignment="Center" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Allowed domains" />
                                    <TextBlock x:Name="AllowedDomainsCount"
                                               Text="0 domains configured"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <Button Grid.Column="2" x:Name="ConfigureAllowListButton" Content="Configure" />
                            </Grid>

                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <!-- Block List -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="&#xE711;" FontSize="20" Margin="0,0,12,0"
                                          VerticalAlignment="Center" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Blocked domains" />
                                    <TextBlock x:Name="BlockedDomainsCount"
                                               Text="0 domains blocked"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <Button Grid.Column="2" x:Name="ConfigureBlockListButton" Content="Configure" />
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Data Policy Section -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Data Policy"
                               Style="{StaticResource SubtitleTextBlockStyle}" />

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Spacing="16">

                            <!-- Data Retention -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="&#xE7C3;" FontSize="20" Margin="0,0,12,0"
                                          VerticalAlignment="Center" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Data retention" />
                                    <TextBlock Text="How long to keep conversation history"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <ComboBox Grid.Column="2" x:Name="RetentionSelector" SelectedIndex="2" MinWidth="120">
                                    <ComboBoxItem Content="7 days" />
                                    <ComboBoxItem Content="30 days" />
                                    <ComboBoxItem Content="90 days" />
                                    <ComboBoxItem Content="1 year" />
                                    <ComboBoxItem Content="Forever" />
                                </ComboBox>
                            </Grid>

                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <!-- Export Policy -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="&#xEDE1;" FontSize="20" Margin="0,0,12,0"
                                          VerticalAlignment="Center" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Allow data export" />
                                    <TextBlock Text="Users can export conversations"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <ToggleSwitch Grid.Column="2" x:Name="AllowExportToggle" IsOn="True" />
                            </Grid>

                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <!-- Telemetry -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="&#xE9D9;" FontSize="20" Margin="0,0,12,0"
                                          VerticalAlignment="Center" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Usage telemetry" />
                                    <TextBlock Text="Send anonymous usage statistics"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <ToggleSwitch Grid.Column="2" x:Name="TelemetryToggle" IsOn="False" />
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Access Controls Section -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Access Controls"
                               Style="{StaticResource SubtitleTextBlockStyle}" />

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Spacing="16">

                            <!-- Extension Installation -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="&#xEA86;" FontSize="20" Margin="0,0,12,0"
                                          VerticalAlignment="Center" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Allow extension installation" />
                                    <TextBlock Text="Users can install new extensions"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <ToggleSwitch Grid.Column="2" x:Name="AllowExtensionsToggle" IsOn="True" />
                            </Grid>

                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <!-- Model Import -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="&#xE950;" FontSize="20" Margin="0,0,12,0"
                                          VerticalAlignment="Center" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Allow model import" />
                                    <TextBlock Text="Users can import custom models"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <ToggleSwitch Grid.Column="2" x:Name="AllowModelImportToggle" IsOn="True" />
                            </Grid>

                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <!-- Tool Access -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="&#xE943;" FontSize="20" Margin="0,0,12,0"
                                          VerticalAlignment="Center" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Allow code execution" />
                                    <TextBlock Text="Assistant can run code snippets"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <ToggleSwitch Grid.Column="2" x:Name="AllowCodeExecutionToggle" IsOn="False" />
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Audit Log Section -->
                <StackPanel Spacing="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Audit Log"
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   VerticalAlignment="Center" />
                        <Button Grid.Column="1" x:Name="ExportAuditLogButton" Content="Export" />
                    </Grid>

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8"
                            Padding="16"
                            MaxHeight="250">
                        <ScrollViewer>
                            <StackPanel x:Name="AuditLogList" Spacing="8">
                                <Grid Padding="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Glyph="&#xE7BA;" FontSize="14" Margin="0,0,12,0"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <TextBlock Grid.Column="1" Text="Policy loaded from system configuration"
                                               Style="{StaticResource CaptionTextBlockStyle}" />
                                    <TextBlock Grid.Column="2" Text="Just now"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </StackPanel>

                <!-- Bottom Spacer -->
                <Border Height="24" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
