<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="InControl.App.Pages.ConnectivityPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Padding="24,16" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton"
                    Grid.Column="0"
                    Padding="8"
                    Background="Transparent"
                    BorderThickness="0"
                    ToolTipService.ToolTip="Back"
                    VerticalAlignment="Center"
                    Margin="0,0,12,0">
                <FontIcon Glyph="&#xE72B;" FontSize="16" />
            </Button>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="Connectivity"
                           Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Manage network connections and offline mode"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>

            <!-- Connection Status -->
            <Border Grid.Column="2"
                    CornerRadius="16"
                    Padding="12,6"
                    Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse x:Name="ConnectionIndicator"
                             Width="8" Height="8"
                             Fill="{ThemeResource SystemFillColorSuccessBrush}"
                             VerticalAlignment="Center" />
                    <TextBlock x:Name="ConnectionStatusText"
                               Text="Online"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="24">
            <StackPanel Spacing="24" MaxWidth="800">

                <!-- Quick Toggle Card -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="12"
                        Padding="24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                Width="64" Height="64"
                                CornerRadius="12"
                                Margin="0,0,20,0"
                                VerticalAlignment="Center">
                            <Border.Background>
                                <SolidColorBrush x:Name="OfflineIconBackground" Color="#1A0078D4" />
                            </Border.Background>
                            <FontIcon x:Name="OfflineModeIcon"
                                      Glyph="&#xE701;"
                                      FontSize="28"
                                      Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Offline Mode"
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock x:Name="OfflineModeDescription"
                                       Text="All network connections are allowed"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <ToggleSwitch Grid.Column="2"
                                      x:Name="OfflineModeToggle"
                                      VerticalAlignment="Center"
                                      OnContent="On"
                                      OffContent="Off" />
                    </Grid>
                </Border>

                <!-- Connection Details -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Connection Details"
                               Style="{StaticResource SubtitleTextBlockStyle}" />

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Status"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="1" x:Name="DetailStatusText" Text="Connected" />
                            </Grid>

                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Network type"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="1" x:Name="NetworkTypeText" Text="Ethernet" />
                            </Grid>

                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Inference backend"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="1" x:Name="BackendText" Text="Local (llama.cpp)" />
                            </Grid>

                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Last check"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                    <TextBlock x:Name="LastCheckText" Text="Just now" />
                                    <Button x:Name="RefreshButton"
                                            Padding="4"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            ToolTipService.ToolTip="Refresh">
                                        <FontIcon Glyph="&#xE72C;" FontSize="12" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- What's Affected -->
                <StackPanel Spacing="8">
                    <TextBlock Text="What's affected by offline mode"
                               Style="{StaticResource SubtitleTextBlockStyle}" />

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Spacing="12">

                            <!-- Local Inference -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="&#xE8F1;" FontSize="18" Margin="0,0,12,0"
                                          VerticalAlignment="Center"
                                          Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Local inference" />
                                    <TextBlock Text="Run models on your machine"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <TextBlock Grid.Column="2"
                                           Text="Always available"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                           VerticalAlignment="Center" />
                            </Grid>

                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <!-- Web Search -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="&#xE721;" FontSize="18" Margin="0,0,12,0"
                                          VerticalAlignment="Center"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Web search" />
                                    <TextBlock Text="Search the internet for information"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <TextBlock Grid.Column="2"
                                           x:Name="WebSearchStatus"
                                           Text="Available"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                           VerticalAlignment="Center" />
                            </Grid>

                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <!-- Model Downloads -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="&#xE896;" FontSize="18" Margin="0,0,12,0"
                                          VerticalAlignment="Center"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Model downloads" />
                                    <TextBlock Text="Download new models from Hugging Face"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <TextBlock Grid.Column="2"
                                           x:Name="ModelDownloadStatus"
                                           Text="Available"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                           VerticalAlignment="Center" />
                            </Grid>

                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <!-- Updates -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="&#xE777;" FontSize="18" Margin="0,0,12,0"
                                          VerticalAlignment="Center"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="App updates" />
                                    <TextBlock Text="Check for and download updates"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <TextBlock Grid.Column="2"
                                           x:Name="UpdatesStatus"
                                           Text="Available"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                           VerticalAlignment="Center" />
                            </Grid>

                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <!-- Extension Network -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="&#xEA86;" FontSize="18" Margin="0,0,12,0"
                                          VerticalAlignment="Center"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Extension network access" />
                                    <TextBlock Text="Extensions that require internet"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <TextBlock Grid.Column="2"
                                           x:Name="ExtensionNetworkStatus"
                                           Text="Available"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                           VerticalAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Bottom Spacer -->
                <Border Height="24" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
