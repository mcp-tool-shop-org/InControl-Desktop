{
  "App": {
    "Theme": "System",
    "ShowTrayIcon": true,
    "MinimizeToTray": true,
    "StartMinimized": false,
    "CheckForUpdates": true,
    "DataPath": "%LOCALAPPDATA%/Volt/data"
  },
  "Chat": {
    "DefaultSystemPrompt": null,
    "StreamResponses": true,
    "AutoGenerateTitles": true,
    "MaxContextMessages": 50,
    "AutoSave": true,
    "AutoSaveIntervalSeconds": 30,
    "ShowTokenCounts": true,
    "ShowGenerationSpeed": true
  },
  "Inference": {
    "Backend": "Ollama",
    "DefaultModel": "llama3.2",
    "DefaultTemperature": 0.7,
    "DefaultMaxTokens": 2048,
    "TimeoutSeconds": 300,
    "RetryCount": 3,
    "RetryDelayMs": 1000,
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "KeepAlive": true,
      "KeepAliveMinutes": 5,
      "NumGpuLayers": -1,
      "ContextSize": 8192,
      "NumThreads": null
    }
  },
  "Logging": {
    "MinLevel": "Information",
    "FilePath": "%LOCALAPPDATA%/Volt/logs",
    "WriteToConsole": true,
    "WriteToFile": true,
    "MaxFileSizeMb": 10,
    "RetainedFileCount": 5
  }
}
