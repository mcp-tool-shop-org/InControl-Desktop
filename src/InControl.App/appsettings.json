{
  "App": {
    "Theme": "System",
    "ShowTrayIcon": true,
    "MinimizeToTray": true,
    "StartMinimized": false,
    "CheckForUpdates": true,
    "DataPath": "%LOCALAPPDATA%/InControl/data"
  },
  "Chat": {
    "DefaultSystemPrompt": "You are a helpful, knowledgeable, and friendly AI assistant. You provide clear, accurate, and thoughtful responses. You're conversational yet concise â€” you explain when helpful but don't over-explain. If you're unsure about something, you say so honestly.",
    "StreamResponses": true,
    "AutoGenerateTitles": true,
    "MaxContextMessages": 50,
    "AutoSave": true,
    "AutoSaveIntervalSeconds": 30,
    "ShowTokenCounts": true,
    "ShowGenerationSpeed": true
  },
  "Inference": {
    "Backend": "Ollama",
    "DefaultModel": "llama3.2",
    "DefaultTemperature": 0.7,
    "DefaultMaxTokens": 2048,
    "TimeoutSeconds": 300,
    "RetryCount": 3,
    "RetryDelayMs": 1000,
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "KeepAlive": true,
      "KeepAliveMinutes": 5,
      "NumGpuLayers": -1,
      "ContextSize": 8192,
      "NumThreads": null
    }
  },
  "Voice": {
    "AutoSpeak": true,
    "DefaultVoice": "af_bella",
    "Volume": 0.8,
    "Speed": 1.0,
    "UseGpu": true,
    "ModelPath": null
  },
  "Logging": {
    "MinLevel": "Information",
    "FilePath": "%LOCALAPPDATA%/InControl/logs",
    "WriteToConsole": true,
    "WriteToFile": true,
    "MaxFileSizeMb": 10,
    "RetainedFileCount": 5
  }
}
