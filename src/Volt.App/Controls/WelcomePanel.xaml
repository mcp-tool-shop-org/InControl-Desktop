<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Volt.App.Controls.WelcomePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Volt.App.Controls">

    <Grid Padding="48"
          MaxWidth="600"
          HorizontalAlignment="Center"
          VerticalAlignment="Center">
        <StackPanel Spacing="32">
            <!-- Greeting -->
            <StackPanel Spacing="8">
                <TextBlock x:Name="GreetingText"
                           Text="Good morning"
                           Style="{StaticResource TitleTextBlockStyle}" />

                <TextBlock x:Name="SubtitleText"
                           Text="Pick up where you left off, or start something new."
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           TextWrapping="Wrap" />
            </StackPanel>

            <!-- Quick Actions -->
            <StackPanel Spacing="12">
                <!-- Continue Session (shown if recent session exists) -->
                <Button x:Name="ContinueButton"
                        HorizontalAlignment="Stretch"
                        Padding="16"
                        Click="ContinueButton_Click"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon Grid.Column="0"
                                  Glyph="&#xE768;"
                                  FontSize="20"
                                  Margin="0,0,12,0" />

                        <StackPanel Grid.Column="1">
                            <TextBlock x:Name="ContinueSessionTitle"
                                       Text="Continue session"
                                       Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TextBlock x:Name="ContinueSessionTime"
                                       Text="Started 5m ago"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>

                        <FontIcon Grid.Column="2"
                                  Glyph="&#xE76C;"
                                  FontSize="12"
                                  Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                    </Grid>
                </Button>

                <!-- New Session -->
                <Button x:Name="NewSessionButton"
                        HorizontalAlignment="Stretch"
                        Padding="16"
                        Style="{StaticResource AccentButtonStyle}"
                        Click="NewSessionButton_Click">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <FontIcon Grid.Column="0"
                                  Glyph="&#xE710;"
                                  FontSize="20"
                                  Margin="0,0,12,0" />

                        <TextBlock Grid.Column="1"
                                   Text="Start a new session"
                                   Style="{StaticResource BodyStrongTextBlockStyle}" />
                    </Grid>
                </Button>

                <!-- Browse Sessions (shown if user has sessions) -->
                <Button x:Name="BrowseButton"
                        HorizontalAlignment="Stretch"
                        Padding="16"
                        Click="BrowseButton_Click"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon Grid.Column="0"
                                  Glyph="&#xE8B7;"
                                  FontSize="20"
                                  Margin="0,0,12,0" />

                        <TextBlock Grid.Column="1"
                                   Text="Browse sessions"
                                   Style="{StaticResource BodyStrongTextBlockStyle}" />

                        <TextBlock x:Name="SessionCountText"
                                   Grid.Column="2"
                                   Text="12 sessions"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   VerticalAlignment="Center" />
                    </Grid>
                </Button>
            </StackPanel>

            <!-- Status Footer -->
            <StackPanel Spacing="8">
                <StackPanel x:Name="ModelStatusPanel"
                            Orientation="Horizontal"
                            Spacing="8"
                            Visibility="Collapsed">
                    <FontIcon Glyph="&#xE73E;"
                              FontSize="12"
                              Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                    <TextBlock x:Name="ModelStatusText"
                               Text="llama3.2 ready"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <TextBlock Text="Everything runs locally on your machine."
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
