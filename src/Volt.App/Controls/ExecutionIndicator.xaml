<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Volt.App.Controls.ExecutionIndicator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Volt.App.Controls">

    <!-- Execution Indicator: Shows current execution state with elapsed time -->
    <Grid x:Name="RootGrid" Visibility="Collapsed">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- State Icon / Progress -->
        <Grid Grid.Column="0" Width="20" Height="20">
            <!-- Progress Ring (shown during active execution) -->
            <ProgressRing x:Name="ProgressIndicator"
                          IsActive="False"
                          Width="16"
                          Height="16" />

            <!-- Static Icon (shown when idle/complete/issue) -->
            <FontIcon x:Name="StateIcon"
                      FontSize="14"
                      Visibility="Collapsed" />
        </Grid>

        <!-- State Text -->
        <TextBlock Grid.Column="1"
                   x:Name="StateText"
                   Text="Idle"
                   Margin="8,0,0,0"
                   VerticalAlignment="Center" />

        <!-- Elapsed Time -->
        <TextBlock Grid.Column="2"
                   x:Name="ElapsedTimeText"
                   Style="{StaticResource CaptionTextBlockStyle}"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                   Margin="12,0,0,0"
                   VerticalAlignment="Center"
                   Visibility="Collapsed" />

        <!-- Cancel Button -->
        <Button Grid.Column="3"
                x:Name="CancelButton"
                Content="Cancel"
                Padding="8,4"
                Margin="12,0,0,0"
                Visibility="Collapsed">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Escape" />
            </Button.KeyboardAccelerators>
        </Button>
    </Grid>
</UserControl>
