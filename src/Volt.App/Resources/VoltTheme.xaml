<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===========================================
         VOLT DESIGN SYSTEM
         Theme: "Calm Power" - Professional, trustworthy, uncluttered
         =========================================== -->

    <!-- =================== SPACING =================== -->
    <!-- 4px base unit, scaled for visual rhythm -->
    <x:Double x:Key="SpacingXS">4</x:Double>
    <x:Double x:Key="SpacingSM">8</x:Double>
    <x:Double x:Key="SpacingMD">16</x:Double>
    <x:Double x:Key="SpacingLG">24</x:Double>
    <x:Double x:Key="SpacingXL">32</x:Double>
    <x:Double x:Key="SpacingXXL">48</x:Double>

    <Thickness x:Key="SpacingXSThickness">4</Thickness>
    <Thickness x:Key="SpacingSMThickness">8</Thickness>
    <Thickness x:Key="SpacingMDThickness">16</Thickness>
    <Thickness x:Key="SpacingLGThickness">24</Thickness>
    <Thickness x:Key="SpacingXLThickness">32</Thickness>

    <!-- =================== LAYOUT =================== -->
    <x:Double x:Key="SidebarMinWidth">240</x:Double>
    <x:Double x:Key="SidebarMaxWidth">360</x:Double>
    <x:Double x:Key="SidebarDefaultWidth">280</x:Double>

    <x:Double x:Key="InspectorMinWidth">280</x:Double>
    <x:Double x:Key="InspectorMaxWidth">400</x:Double>
    <x:Double x:Key="InspectorDefaultWidth">320</x:Double>

    <x:Double x:Key="ContentMaxWidth">800</x:Double>
    <x:Double x:Key="AppBarHeight">48</x:Double>
    <x:Double x:Key="StatusBarHeight">32</x:Double>

    <!-- =================== BORDER RADIUS =================== -->
    <CornerRadius x:Key="RadiusNone">0</CornerRadius>
    <CornerRadius x:Key="RadiusSM">4</CornerRadius>
    <CornerRadius x:Key="RadiusMD">8</CornerRadius>
    <CornerRadius x:Key="RadiusLG">12</CornerRadius>
    <CornerRadius x:Key="RadiusXL">16</CornerRadius>
    <CornerRadius x:Key="RadiusFull">999</CornerRadius>

    <!-- =================== SEMANTIC COLORS =================== -->

    <!-- Surface colors for layered UI -->
    <SolidColorBrush x:Key="SurfaceBaseBrush" Color="{ThemeResource SolidBackgroundFillColorBase}" />
    <SolidColorBrush x:Key="SurfaceElevatedBrush" Color="{ThemeResource CardBackgroundFillColorDefault}" />
    <SolidColorBrush x:Key="SurfaceOverlayBrush" Color="{ThemeResource LayerOnMicaBaseAltFillColorDefault}" />

    <!-- Intent indicators -->
    <SolidColorBrush x:Key="IntentUserBrush" Color="{ThemeResource SystemAccentColor}" />
    <SolidColorBrush x:Key="IntentModelBrush" Color="{ThemeResource TextFillColorSecondary}" />

    <!-- State colors (not emotional - factual) -->
    <SolidColorBrush x:Key="StateIdleBrush" Color="{ThemeResource TextFillColorTertiary}" />
    <SolidColorBrush x:Key="StateActiveBrush" Color="{ThemeResource SystemFillColorSuccess}" />
    <SolidColorBrush x:Key="StateIssueBrush" Color="{ThemeResource SystemFillColorCritical}" />
    <SolidColorBrush x:Key="StateWarningBrush" Color="{ThemeResource SystemFillColorCaution}" />

    <!-- =================== MESSAGE CARDS =================== -->
    <!-- User intent: subtle accent tint -->
    <SolidColorBrush x:Key="UserIntentBackground" Color="{ThemeResource SystemAccentColor}" Opacity="0.08" />
    <SolidColorBrush x:Key="UserIntentBorder" Color="{ThemeResource SystemAccentColor}" Opacity="0.2" />

    <!-- Model output: neutral surface -->
    <SolidColorBrush x:Key="ModelOutputBackground" Color="{ThemeResource CardBackgroundFillColorDefault}" />
    <SolidColorBrush x:Key="ModelOutputBorder" Color="{ThemeResource CardStrokeColorDefault}" />

    <!-- Streaming state: subtle pulse indicator -->
    <SolidColorBrush x:Key="StreamingIndicatorBrush" Color="{ThemeResource SystemAccentColor}" Opacity="0.6" />

    <!-- =================== TYPOGRAPHY =================== -->
    <x:Double x:Key="FontSizeCaption">12</x:Double>
    <x:Double x:Key="FontSizeBody">14</x:Double>
    <x:Double x:Key="FontSizeSubtitle">16</x:Double>
    <x:Double x:Key="FontSizeTitle">20</x:Double>
    <x:Double x:Key="FontSizeDisplay">24</x:Double>

    <!-- =================== ANIMATIONS =================== -->
    <Duration x:Key="AnimationFast">0:0:0.1</Duration>
    <Duration x:Key="AnimationNormal">0:0:0.2</Duration>
    <Duration x:Key="AnimationSlow">0:0:0.3</Duration>

    <!-- =================== ICON SIZES =================== -->
    <x:Double x:Key="IconSizeSM">12</x:Double>
    <x:Double x:Key="IconSizeMD">16</x:Double>
    <x:Double x:Key="IconSizeLG">20</x:Double>
    <x:Double x:Key="IconSizeXL">24</x:Double>
    <x:Double x:Key="IconSizeXXL">32</x:Double>

    <!-- =================== CONTROL STYLES =================== -->

    <!-- Subtle button for secondary actions -->
    <Style x:Key="SubtleButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
    </Style>

    <!-- Ghost button for minimal UI (icon buttons) -->
    <Style x:Key="GhostButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="MinWidth" Value="0" />
        <Setter Property="MinHeight" Value="0" />
    </Style>

    <!-- Pill button for status indicators -->
    <Style x:Key="PillButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="CornerRadius" Value="{StaticResource RadiusFull}" />
        <Setter Property="Padding" Value="12,6" />
    </Style>

    <!-- Status capsule for AppBar -->
    <Style x:Key="StatusCapsuleStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource RadiusFull}" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="Background" Value="{ThemeResource SubtleFillColorSecondary}" />
    </Style>

    <!-- Card style for elevated content -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefault}" />
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefault}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMD}" />
        <Setter Property="Padding" Value="{StaticResource SpacingMDThickness}" />
    </Style>

    <!-- Session item in sidebar -->
    <Style x:Key="SessionItemStyle" TargetType="ListViewItem">
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Margin" Value="4,2" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusSM}" />
    </Style>

    <!-- =================== SEMANTIC STYLES =================== -->

    <!-- Monospace text for code/technical content -->
    <Style x:Key="MonospaceTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlockStyle}">
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, monospace" />
    </Style>

    <!-- Stat value for inspector -->
    <Style x:Key="StatValueStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyStrongTextBlockStyle}">
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, monospace" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Stat label for inspector -->
    <Style x:Key="StatLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource CaptionTextBlockStyle}">
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondary}" />
    </Style>

    <!-- Empty state text -->
    <Style x:Key="EmptyStateTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorTertiary}" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

</ResourceDictionary>
